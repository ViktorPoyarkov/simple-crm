{% extends 'base.html.twig' %}

{% block title %}Agent assign{% endblock %}

{% block body %}
    Assign agent "{{ agentForAssign.username }}" to agent:
    <div></div>
    <form action="{{ path('app_agent_assign') }}" name="assign-user-form" id="assign-user-form" method="post">
        <input type="hidden" name="agentForAssignId" value="{{ agentForAssign.id }}">
        <select name="agentId" id="agentId" form="assign-user-form">
            {% for agent in agents %}
                <option value="{{ agent.id }}">{{ agent.username }}</option>
            {% endfor %}
        </select>
       <button form="assign-user-form" type="submit">Assign User</button>
    </form>
    
{% endblock %}