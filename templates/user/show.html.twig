{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Login_time</th>
                <td>{{ user.loginTime ? user.loginTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ user.currency }}</td>
            </tr>
            <tr>
                <th>Total_pnl</th>
                <td>{{ user.totalPnl }}</td>
            </tr>
            <tr>
                <th>Equity</th>
                <td>{{ user.equity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
